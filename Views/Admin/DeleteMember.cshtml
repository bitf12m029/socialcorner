@{
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}


@using EADprojectBitf12m029.Models




<div class="container" style="margin-left: 20%; margin-top: 10%">

    @foreach (var p in Model)
    {
         
            <div class="border_box" style="margin-top: 3% ;background-color:black; background-repeat: no-repeat">
                

             

                    @if(p.img != null)
                    {
                        <div class="product_img">
                            <img class="img-circle" src=@p.img alt="Image" border="0" style="margin-left: 50.5%; width: 100px; height: 125px" />
                        </div>
                    }
                    @if(p.img == null)
                    {
                        <div class="product_img">
                            <img class="img-circle" src="/Bootstrap/Images/img1.jpg" alt="Image" border="0" style="margin-left: 50.5%; width: 100px; height: 125px" />
                        </div>
                    }
                    <div class="product_img">
                        <p class="title_box" style=" margin-left:5.5%; width: 50px; height: 50px; font-size: xx-large;color: white">@p.UserName</p>
                    </div>

                <form action="~/Admin/DelMember?id=@p.UserName" method="POST">
                    <input type="hidden" value=@p.UserName name="Friend" />
                    <div class="prod_price" style="margin-left: 57% ; margin-top: -9.5%"><input class="btn btn-info btn-navbar" type="submit" value="Delete" /></div>
                </form>
                </div>
                }

            </div>
 