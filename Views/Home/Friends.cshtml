@using EADprojectBitf12m029.Models

@{
    Layout = "~/Views/Shared/UserShared.cshtml";
}


<div class="container" style="margin-left: 20%; margin-top: 10%">
    @foreach (var p in Model)
    {
        <div class="border_box" style="margin-top: 5% ;background-image: url(@p.cover);">
            

            @if (p.img != null)
            {
                <div class="product_img">
                    <img class="img-circle" src=@p.img alt="Image" border="0" style="margin-left: -60.5%; width: 100px; height: 125px" />
                </div>
            }
            @if (p.img == null)
            {
                <div class="product_img">
                    <img class="img-circle" src="/Bootstrap/Images/img1.jpg" alt="Image" border="0" style="margin-left: -60.5%; width: 100px; height: 125px" />
                </div>
            }
            <div class="product_img" style="">
                <p class="title_box" style=" margin-left:0; width: 100%; height: 50px; font-size: xx-large; background-color: black;color:white">@p.UserName</p>
            </div>
           
            <div id="myDiv" class="product_img" style="color: white ;background-image: url('/Bootstrap/Images/bg1.jpg')">
                @using(Html.BeginForm("Message", "Home", FormMethod.Post)){
                   <h4  style="color: black; margin-left: -80%">Message</h4>
                    <textarea name="cat" style="margin-left: 15.5%; margin-top: -5%; width: 400px;color: black"></textarea>

                    <input value=@p.UserName name="id" type="hidden" />
                    <input type="submit" value="Send" class="btn btn-info btn-navbar" style="margin-left: 80%" />
                    Html.EndForm();
                }


            </div>
            </div>
    }

</div>
